// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // NOTE: set to `sqlite` for local development convenience. Change to `postgresql` for production and set DATABASE_URL in .env
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  nickname      String
  current_theme String   @default("Classic")
  schedules     Schedule[]
  quickLinks    QuickLink[]
  refreshTokens RefreshToken[]
}

model Schedule {
  id           Int      @id @default(autoincrement())
  title        String
  content      String?
  date         DateTime
  hyperlink_url String
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}

model QuickLink {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  order_index Int
  icon_url    String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
