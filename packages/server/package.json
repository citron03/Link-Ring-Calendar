{
  "name": "@link-ring/calendar-server",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:local": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json --outDir dist",
    "build:prod": "NODE_ENV=production pnpm build",
    "start": "NODE_ENV=production node ./dist/index.js",
    "start:dev": "NODE_ENV=development node ./dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "catalog:",
    "@trpc/server": "catalog:",
    "bcryptjs": "catalog:",
    "cookie-parser": "catalog:",
    "cors": "catalog:",
    "dotenv": "catalog:",
    "express": "catalog:",
    "jsonwebtoken": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bcryptjs": "catalog:",
    "@types/express": "catalog:",
    "@types/jsonwebtoken": "catalog:",
    "@types/node": "catalog:",
    "prisma": "catalog:",
    "ts-node-dev": "catalog:",
    "typescript": "catalog:"
  }
}
